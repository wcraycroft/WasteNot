<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/donationListLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <ImageView
        android:id="@+id/donationListImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_weight="0.5"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher"></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical"
        android:paddingTop="6dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/donationItemTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Packaged (tray)"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donationItemServingsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 servings"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/donationItemTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick up before 5:30 pm"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/status"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/donationItemStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Claimed          Waiting on driver"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>